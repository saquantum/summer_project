<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ourrainwater.dao.LocationMapper">
    <resultMap id="locationMapping" type="com.ourrainwater.pojo.Location">
        <result column="id" property="id"/>
        <result column="city" property="city"/>
        <result column="county" property="county"/>
    </resultMap>

    <select id="selectAllLocations" resultMap="locationMapping">
        select *
        from locations;
    </select>

    <select id="selectLocationByID" resultMap="locationMapping">
        select *
        from locations
        where id = #{id}
    </select>

    <select id="selectByLocation" resultMap="locationMapping">
        select * from locations
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="city != null and city != ''">
                and city like #{city}
            </if>
            <if test="county != null and county != ''">
                and county like #{county}
            </if>
        </where>
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into locations
        values (null, #{city}, #{county});
    </insert>

    <update id="update">
        update locations
        <set>
            <if test="city != null and city != ''">city = #{city},</if>
            <if test="county != null and county != ''">county = #{county},</if>
        </set>
        where id = #{id};
    </update>

    <delete id="deleteByIDs">
        delete from locations where id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">#{id}</foreach>
    </delete>
</mapper>
