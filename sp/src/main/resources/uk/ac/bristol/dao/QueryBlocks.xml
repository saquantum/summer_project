<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="QueryBlocks">

    <sql id="filteringWithList">
        <foreach collection="filterList" item="item" separator="and">
            <choose>
                <when test="item.op == 'is'">
                    <choose>
                        <when test="item.dataType == 'date'">
                            ${item.column} = #{item.val, jdbcType=DATE}
                        </when>
                        <otherwise>
                            ${item.column} = #{item.val}
                        </otherwise>
                    </choose>
                </when>
                <when test="item.op == 'like'">
                    lower(${item.column}) like lower(#{item.val})
                </when>
                <when test="item.op == 'range'">
                    <choose>
                        <when test="item.dataType == 'date'">
                            <if test="item.min != null and item.max != null">
                                ${item.column} between #{item.min, jdbcType=DATE} and #{item.max, jdbcType=DATE}
                            </if>
                            <if test="item.min != null and item.max == null">
                                ${item.column} &gt;= #{item.min, jdbcType=DATE}
                            </if>
                            <if test="item.min == null and item.max != null">
                                ${item.column} &lt;= #{item.max, jdbcType=DATE}
                            </if>
                        </when>
                        <otherwise>
                            <if test="item.min != null and item.max != null">
                                ${item.column} between #{item.min} and #{item.max}
                            </if>
                            <if test="item.min != null and item.max == null">
                                ${item.column} &gt;= #{item.min}
                            </if>
                            <if test="item.min == null and item.max != null">
                                ${item.column} &lt;= #{item.max}
                            </if>
                        </otherwise>
                    </choose>
                </when>
                <when test="item.op == 'in'">
                    ${item.column} in
                    <foreach collection="item.list" item="val" open="(" separator="," close=")">
                        <choose>
                            <when test="item.dataType == 'date'">
                                #{val, jdbcType=DATE}
                            </when>
                            <otherwise>
                                #{val}
                            </otherwise>
                        </choose>
                    </foreach>
                </when>
                <when test="item.op == 'isNull'">
                    ${item.column} is null
                </when>
                <when test="item.op == 'notNull'">
                    ${item.column} is not null
                </when>
            </choose>
        </foreach>
    </sql>

    <sql id="filtering">
        <where>
            <if test="filterList != null and filterList.size() > 0">
                <include refid="QueryBlocks.filteringWithList"/>
            </if>
        </where>
    </sql>

    <sql id="combinedFiltering">
        <if test="filterList != null and filterList.size() > 0">
            and
            <include refid="QueryBlocks.filteringWithList"/>
        </if>
    </sql>

    <sql id="orderAndPage">
        <if test="orderList != null and orderList.size() > 0">
            order by
            <foreach collection="orderList" item="item" separator=",">
                ${item.column} ${item.direction}
            </foreach>
        </if>
        <if test="limit != null">
            limit #{limit}
            <if test="offset != null">
                offset #{offset}
            </if>
        </if>
    </sql>
</mapper>